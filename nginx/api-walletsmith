server {
  listen       443 ssl;
  server_name  api.walletsmith.app;

  ssl_certificate  /etc/letsencrypt/live/api.walletsmith.app/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/api.walletsmith.app/privkey.pem;

  location / {
    proxy_pass http://localhost:4000;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
  }
}
